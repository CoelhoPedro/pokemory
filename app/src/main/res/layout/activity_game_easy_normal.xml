<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GameActivity"
    android:background="@drawable/game_background">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/score"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_gravity="left" />

        <TextView
            android:id="@+id/textViewTries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/tries"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_above="@+id/textViewScore"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow
                android:id="@+id/tableRowFirstLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.pedro.pokemory.ResizableImageView
                    android:id="@+id/ImageView1Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/cardbackground" />

                <com.example.pedro.pokemory.ResizableImageView
                    android:id="@+id/ImageView2Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"

                    android:layout_weight="1"
                    android:src="@drawable/cardbackground" />

                <com.example.pedro.pokemory.ResizableImageView
                    android:id="@+id/ImageView3Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/cardbackground" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRowSecondLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.pedro.pokemory.ResizableImageView
                    android:id="@+id/ImageView4Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/cardbackground" />

                <com.example.pedro.pokemory.ResizableImageView
                    android:id="@+id/ImageView5Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/cardbackground" />

                <com.example.pedro.pokemory.ResizableImageView
                    android:id="@+id/ImageView6Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"

                    android:src="@drawable/cardbackground" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRowThirdLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.pedro.pokemory.ResizableImageView
                    android:id="@+id/ImageView7Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/cardbackground" />

                <com.example.pedro.pokemory.ResizableImageView
                    android:id="@+id/ImageView8Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/cardbackground" />

                <com.example.pedro.pokemory.ResizableImageView
                    android:id="@+id/ImageView9Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/cardbackground" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRowFourthLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.pedro.pokemory.ResizableImageView
                    android:id="@+id/ImageView10Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/cardbackground" />

                <com.example.pedro.pokemory.ResizableImageView
                    android:id="@+id/ImageView11Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/cardbackground" />

                <com.example.pedro.pokemory.ResizableImageView
                    android:id="@+id/ImageView12Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/cardbackground" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

</LinearLayout>