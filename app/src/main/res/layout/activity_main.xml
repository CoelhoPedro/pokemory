<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/new_login_gradients">

    <ImageView
        android:id="@+id/imageViewGameLogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonNewGame"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/pokemory_logo"
        android:gravity="center"
        android:text="POKEMORY"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonNewGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonMultiplayer"
        android:layout_alignRight="@+id/buttonMultiplayer"
        android:layout_alignStart="@+id/buttonMultiplayer"
        android:layout_alignLeft="@+id/buttonMultiplayer"
        android:layout_above="@+id/buttonMultiplayer"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_button"
        android:backgroundTint="@color/buttonBlue"
        android:textColor="@color/buttonText"
        android:text="@string/newGame"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/buttonMultiplayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/background_button"
        android:backgroundTint="@color/buttonBlue"
        android:textColor="#ffcb05"
        android:text="Multiplayer"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/buttonRanking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonMultiplayer"
        android:layout_alignRight="@+id/buttonMultiplayer"
        android:layout_alignStart="@+id/buttonMultiplayer"
        android:layout_alignLeft="@+id/buttonMultiplayer"
        android:layout_below="@id/buttonMultiplayer"
        android:background="@drawable/background_button"
        android:backgroundTint="@color/buttonBlue"
        android:textColor="#ffcb05"
        android:text="Ranking"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonRanking"
        android:layout_alignStart="@id/buttonRanking"
        android:layout_alignEnd="@id/buttonRanking"
        android:layout_alignLeft="@id/buttonRanking"
        android:layout_alignRight="@id/buttonRanking"
        android:background="@drawable/background_button"
        android:backgroundTint="@color/buttonBlue"
        android:textColor="@color/buttonText"
        android:text="Login"
        android:layout_marginBottom="10dp"/>

    <ImageButton
        android:id="@+id/buttonSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:background="@drawable/sound_on_blue" />

</RelativeLayout>